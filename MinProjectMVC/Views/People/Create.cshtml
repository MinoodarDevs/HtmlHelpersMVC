@model MinProjectMVC.Models.People

@{
    ViewBag.Title = "افزودن شخص";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("Create", "People", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => m.PersonName, new { @class = "control-label col-md-2" })

            <div class="col-md-4">
                @*@Html.TextBoxFor(m=> m.PersonName,new {@class="form-control"})*@
                @Html.EditorFor(m => m.PersonName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PersonName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PersonAge, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @*@Html.TextBoxFor(m=> m.PersonAge,new {@class="form-control"})*@

                @Html.EditorFor(m => m.PersonAge, new { htmlAttributes = new { @class = "form-control", min = 5, max = 100 } })
                @Html.ValidationMessageFor(m => m.PersonAge, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                @Html.CheckBoxFor(m => m.PersonIsEmployed)
                @Html.LabelFor(m => m.PersonIsEmployed)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4 col-md-offset-2">
                <input type="submit" value="ثبت" class="btn btn-primary" />
                @Html.ActionLink("بازگشت به لیست", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>


    </div>
}

@section Scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
